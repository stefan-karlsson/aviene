{
  "name": "@aviene/workspace",
  "version": "1.0.0",
  "description": "Serverless SaaS platform",
  "author": "Stefan Karlsson",
  "license": "AGPL-3.0-or-later",
  "packageManager": "pnpm@10.9.0",
  "type": "module",
  "scripts": {
    "lint": "turbo run lint",
    "build": "turbo run build",
    "build:packages": "turbo run build --parallel --filter='./packages/**'",
    "format": "pnpm exec prettier . --write",
    "format:check": "pnpm exec prettier . --check",
    "test": "turbo run test",
    "check:types": "turbo run check:types",
    "ci:publish": "pnpm build:packages && pnpm changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "2",
    "@commitlint/cli": "19",
    "@commitlint/config-conventional": "19",
    "prettier": "latest",
    "lint-staged": "16",
    "eslint": "catalog:",
    "turbo": "latest",
    "husky": "9"
  }
}
