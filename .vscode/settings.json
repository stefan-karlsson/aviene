{
  "aws.telemetry": false,
  "redhat.telemetry.enabled": false,
  "telemetry.feedback.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Format on save is disabled globally; enable it explicitly per file type as needed
  "editor.formatOnSave": false,
  // Enable ESLint to format
  "eslint.format.enable": true,
  "[javascript][typescript][typescriptreact][javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "eslint.workingDirectories": [
    {
      "pattern": "apps/browser/*"
    },
    {
      "pattern": "apps/server/*"
    },
    {
      "pattern": "packages/server/*"
    },
    {
      "pattern": "packages/browser/*"
    },
    {
      "pattern": "packages/shared/*"
    }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "yaml.schemas": {
    "file:///home/stefan/.vscode/extensions/atlassian.atlascode-3.8.10/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml",
    "https://raw.githubusercontent.com/aws/serverless-application-model/main/samtranslator/schema/schema.json": "file:///home/stefan/dev/repos/stefan-karlsson/aviene/apps/server/user-management/aws-resources.yaml"
  }
}
