{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "file": ".github/instructions/commit-message.instructions.md"
    }
  ],
  "chat.instructionsFilesLocations": {
    ".github/instructions": true
  },
  "chat.promptFilesLocations": {
    ".github/prompts": true
  },
  "chat.modeFilesLocations": {
    ".github/chatmodes": true
  },
  // Format on save is disabled globally; enable it explicitly per file type as needed
  "editor.formatOnSave": false,

  "[javascript][typescript][typescriptreact][javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always",
      "source.organizeImports": "always"
    }
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "eslint.format.enable": true,
  // "eslint.probe": [
  //   // "astro",
  //   // "civet",
  //   // "javascript",
  //   // "javascriptreact",
  //   "typescript",
  //   "typescriptreact"
  //   // "html",
  //   // "mdx",
  //   // "vue",
  //   // "markdown",
  //   // "json",
  //   // "jsonc"
  // ],
  "eslint.workingDirectories": [
    // {
    //   "mode": "auto"
    // }
    {
      "pattern": "apps/*/*/"
    },
    {
      "pattern": "packages/*/*"
    }
  ],
  "typescript.preferences.organizeImports": {
    "sortImportDeclarations": true,
    "sortSpecifiers": true
  },
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,

  "nodejs-testing.extensions": [
    {
      "extensions": ["mjs", "cjs", "js"],
      "parameters": []
    },
    {
      "extensions": ["mts", "cts", "ts"],
      "parameters": ["--import", "tsx"]
    }
  ]
}
